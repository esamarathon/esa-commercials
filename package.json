{
  "name": "esa-commercials",
  "version": "1.2.0",
  "description": "NodeCG bundle used alongside nodecg-speedcontrol to run Twitch commercials for events on the ESAMarathon channel.",
  "homepage": "https://github.com/esamarathon/esa-commercials#readme",
  "bugs": {
    "url": "https://github.com/esamarathon/esa-commercials/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esamarathon/esa-commercials.git"
  },
  "license": "MIT",
  "author": "zoton2",
  "scripts": {
    "autofix": "run-s autofix:*",
    "autofix:browser": "eslint --fix --ext .ts,.vue src/dashboard && eslint --fix --ext .ts src/browser_shared",
    "autofix:extension": "eslint --fix --ext .ts src/extension && eslint --fix --ext .d.ts src/types",
    "build": "run-s build:*",
    "build:browser": "cross-env NODE_ENV=production webpack",
    "build:extension": "tsc -b tsconfig.extension.json",
    "clean": "trash node_modules/.cache && trash dashboard && trash extension",
    "schema-types": "nodecg schema-types",
    "start": "node ../..",
    "watch": "run-p watch:*",
    "watch:browser": "webpack -w",
    "watch:extension": "tsc -b tsconfig.extension.json -w"
  },
  "dependencies": {
    "module-alias": "^2.2.2",
    "needle": "^3.2.0",
    "obs-websocket-js": "^4.0.3",
    "socket.io-client": "^4.5.4",
    "speedcontrol-util": "^0.6.0-RC7"
  },
  "devDependencies": {
    "@fontsource/roboto": "^4.5.8",
    "@mdi/font": "^6.9.96",
    "@types/clone": "^2.1.1",
    "@types/module-alias": "^2.0.1",
    "@types/needle": "^2.5.3",
    "@types/node": "^16.18.8",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vue/component-compiler-utils": "^3.3.0",
    "clone": "^2.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.2",
    "deepmerge": "^4.2.2",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-vue": "^8.7.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "globby": "^13.1.2",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.2",
    "nodecg-cli": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "sass": "~1.32",
    "sass-loader": "^12.6.0",
    "trash-cli": "^5.0.0",
    "ts-loader": "^9.4.2",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.9.4",
    "vue": "^2.7.14",
    "vue-class-component": "^7.2.6",
    "vue-hot-reload-api": "^2.3.4",
    "vue-loader": "^15.10.1",
    "vue-property-decorator": "^9.1.2",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.7.14",
    "vuetify": "^2.6.12",
    "vuetify-loader": "^1.9.2",
    "vuex": "^3.6.2",
    "vuex-class": "^0.3.2",
    "vuex-module-decorators": "^1.2.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-livereload-plugin": "^3.0.2"
  },
  "nodecg": {
    "compatibleRange": "^1.9.0",
    "bundleDependencies": {
      "nodecg-speedcontrol": "^2.4.0"
    },
    "dashboardPanels": [
      {
        "name": "control",
        "title": "ESA Commercial Control",
        "file": "control.html",
        "workspace": "ESA",
        "headerColor": "#c49215",
        "width": 3
      }
    ]
  }
}
